<odoo>
    <record id="view_construction_control_form" model="ir.ui.view">
        <field name="name">construction.control.form</field>
        <field name="model">construction.control</field>
        <field name="arch" type="xml">
            <form string="Construction Quality Control">
                <header>
                    <button name="action_send_to_quality_control"
                            string="Send to Quality Control"
                            type="object"
                            class="btn-primary"
                            groups="egp_bmis.group_bmis_officer"
                            invisible="state != 'in_progress'"
                    />
                    <button name="action_in_progress" type="object" string="Mark as In Progress"
                            class="btn-primary"
                            groups="egp_bmis.group_bmis_officer"
                            invisible="state != 'draft'"/>
                    <button name="action_done"
                            confirm="Are you sure you want to confirm and close this Construct Quality control?"
                            type="object" string="Mark as Done"
                            class="btn-primary"
                            groups="egp_bmis.group_bmis_officer"
                            invisible="state != 'in_progress'"/>
                    <button name="action_draft" confirm="Are you sure you want to Make Draft?" type="object"
                            string="Mark as Draft"
                            groups="egp_bmis.group_bmis_officer"
                            invisible="state != ('done')"
                            class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>

                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Other buttons if any -->
                        <button name="action_view_procurement_contract"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text"
                                string="View Contract">
                            <!--                                invisible=" contract_id, =, False ">-->
                            <field name="contract_id" widget="statinfo" string="Contract"/>
                        </button>


                        <!--                        <button name="action_open_quality_controls"-->
                        <!--                                type="object"-->
                        <!--                                class="oe_stat_button"-->
                        <!--                                icon="fa-tasks"-->

                        <!--                            >-->
                        <!--                            <field name="construction_quality_ids" widget="statinfo" string="Construct Quality Control"/>-->
                        <!--                        </button>-->
<!--                        <button name="action_open_const_quality_controls"-->
<!--                                type="object"-->
<!--                                string="Quality Controls"-->
<!--                                class="oe_stat_button"-->
<!--                                icon="fa-check-square">-->
<!--                            <field name="qc_count" widget="statinfo"/>-->
<!--                        </button>-->
                        <button name="action_open_const_quality_controls"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-tasks"
                                >


                            <field name="qc_count" widget="statinfo" string="Construction Control"/>
                        </button>

                    </div>

                    <div class="oe_title">
                        <h1>
                            <group>
                                <field name="contract_id" readonly="1"/>
                                <!--                                <field name="partner_id" readonly="1"/>-->
                            </group>
                        </h1>
                    </div>

                    <group>
                        <group string="Contract Information" col="2">
                            <field name="contract_number" readonly="1"/>
                            <field name="contract_date" readonly="1"/>
                            <field name="start_date" readonly="1"/>
                            <field name="contract_end_date" readonly="1"/>
                        </group>

                        <group string="Details" col="2">
                            <field name="Project_manager"/>
                            <field name="description"/>
                        </group>
                    </group>

                    <notebook>

                        <page string="Approved QC Products"
                             >
                            <field name="qc_line_summary_html">
<!-- invisible=" status not in ('implementation','complete')  or  procurement_type not in ('products','non_consultative')"-->
                            </field>
                        </page>

                        <page string="Line Items" modifiers='{"readonly": [["can_edit_line_items", "=", false]]}'>>
                            <field name="line_ids">
                                <tree create="false" edit="false" delete="false" groups="egp_bmis.group_bmis_officer">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="first_estimation_qty"/>
                                    <field name="second_estimation_qty"/>
                                    <field name="estimation_difference" readonly="1"/>
                                    <field name="unit_measure"/>
                                    <field name="price"/>
                                    <field name="sub_total" readonly="1"/>
                                    <field name="completed"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="product_id" readonly="1"/>
                                            <field name="description" readonly="1"/>
                                            <field name="unit_measure" readonly="1"/>
                                            <field name="first_estimation_qty" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="price" readonly="1"/>
                                            <field name="sub_total" readonly="1"/>
                                            <field name="estimation_difference" readonly="1"/>
                                            <field name="completed" readonly="1"/>
                                        </group>
                                    </group>
                                    <group>
                                        <group>
                                            <field name="second_estimation_qty"/>
                                        </group>
                                        <group>
                                            <field name="details"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>

                        <page string="Additional Information">
                            <tree>
                                <field name="description"/>
                            </tree>
                        </page>

                        <page string="Board Members" name="board_members">
                            <field name="board_member_ids" readonly="state == 'done' or not user_has_group_bmis_officer">
                                <tree>
                                    <field name="employee_id"/>
                                    <field name="position_title"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                    <field name="role"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="employee_id" required="1"
                                               options="{'no_create': True, 'no_open':True}"/>
                                        <field name="position_title"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="role" required="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>


                        <page string="Quality Control">
                            <field name="construction_quality_ids" string="Quality Control" readonly="state == 'done' or not user_has_group_bmis_officer"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_construction_control_tree" model="ir.ui.view">
        <field name="name">construction.control.tree</field>
        <field name="model">construction.control</field>
        <field name="arch" type="xml">
            <tree>
                <field name="contract_id"/>
                <!--                <field name="partner_id"/>-->
                <field name="contract_number"/>
                <field name="contract_date"/>
                <field name="contract_end_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_construction_control" model="ir.actions.act_window">
        <field name="name">Construction Quality Control</field>
        <field name="res_model">construction.control</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Track and manage construction quality control items for approved procurement contracts.
            </p>
        </field>
    </record>


    <menuitem id="menu_construction_control"
              name="Construction Control"
              parent="menu_construction_control_management"
              action="action_construction_control"
              sequence="10"/>
</odoo>
